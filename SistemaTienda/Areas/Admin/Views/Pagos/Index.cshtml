@{
    ViewData["Title"] = "Lista de Pagos";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Pagos</h2>
        </div>
        <div class="col-4 text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Registrar nuevo Pago
            </a>
        </div>
    </div>

    <br />
    <table id="tblPagos" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Venta</th>
                <th>Fecha</th>
                <th>Monto</th>
                <th>Método de Pago</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/pago.js"></script>
}
