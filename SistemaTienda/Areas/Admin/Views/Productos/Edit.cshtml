@model SistemaTienda.Models.ViewModels.ProductoVM

@{
    ViewData["Title"] = "Editar Producto";
}

<h3 class="text-center mt-4 mb-4">Editar Producto</h3>

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Producto.Id" />

    <div class="row px-2 offset-1 border rounded pt-4 pb-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-10 offset-1">

           
            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="Producto.Nombre" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Producto.Nombre" class="form-control" placeholder="Nombre del producto" />
                    <span asp-validation-for="Producto.Nombre" class="text-danger"></span>
                </div>
            </div>

           
            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="Producto.Descripcion" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Producto.Descripcion" class="form-control" placeholder="Ingrese la descripción del producto"></textarea>
                    <span asp-validation-for="Producto.Descripcion" class="text-danger"></span>
                </div>
            </div>

          
            <div class="form-group row mb-3">
                <div class="col-4">
                    <label class="col-form-label">Categoría</label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Producto.CategoriaId, Model.ListaCategorias, "Seleccione una categoría", new { @class = "form-control" })
                    <span asp-validation-for="Producto.CategoriaId" class="text-danger"></span>
                </div>
            </div>

            
            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="Producto.UrlImagen" class="col-form-label">Imagen</label>
                </div>
                <div class="col-8">
                    <input type="file" name="archivos" class="form-control" />
                    <span asp-validation-for="Producto.UrlImagen" class="text-danger"></span>
                </div>
            </div>

        
            <div class="row mt-4">
                <div class="col-6">
                    <button type="submit" class="btn btn-primary form-control">Guardar cambios</button>
                </div>
                <div class="col-6">
                    <a asp-action="Index" class="btn btn-secondary form-control">Volver</a>
                </div>
            </div>

        </div>
    </div>
</form>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/6.8.3/tinymce.min.js"
            integrity="sha512-VCEWnpOl7PIhbYMcb64pqGZYez41C2uws/M/mDdGPy+vtEJHd9BqbShE4/VNnnZdr7YCPOjd+CBmYca/7WWWCw=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });
    </script>
}
