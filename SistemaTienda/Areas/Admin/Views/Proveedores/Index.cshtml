@{
    ViewData["Title"] = "Lista de Proveedores";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Proveedores</h2>
        </div>
        <div class="col-4 text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Crear nuevo Proveedor
            </a>
        </div>
    </div>

    <br />
    <table id="tblProveedores" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Correo</th>
                <th>Compañía</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/proveedor.js"></script>
}

